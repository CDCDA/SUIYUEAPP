<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#FFFFCC">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <EditText
        android:id="@+id/yijian"
        android:layout_below="@id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="10dp"
        android:textSize="30dp"
        android:hint="请输入你的意见反馈"
        android:background="#FFFFFF"
        android:gravity="top"/>
    <Button
        android:id="@+id/tijiao"
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:layout_below="@id/yijian"
        android:layout_margin="10dp"
        android:background="#FFFFFA"
        android:text="提交"
        android:textSize="40dp"
        />
    <Button
        android:id="@+id/chongzhi"
        android:layout_width="185dp"
        android:layout_height="100dp"
        android:layout_below="@id/yijian"
        android:layout_toRightOf="@id/tijiao"
        android:layout_margin="10dp"
        android:background="#FFFFFA"
        android:text="重置"
        android:textSize="40dp"
        />

</RelativeLayout>