        android:layout_height="100dp"
        android:layout_below="@id/gongneng1"
        android:text="功能2：XXX"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/gongneng3"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/gongneng2"
        android:text="功能3：XXX"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/gongneng4"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/gongneng3"
        android:text="功能4：XXX"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/gongneng5"
        android:background="#FFFFFF"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/gongneng4"
        android:text="功能5：XXX"
        android:textSize="30dp"/>






</RelativeLayout>