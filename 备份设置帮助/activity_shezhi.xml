<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#FFFFCC">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" />
    <Switch
        android:layout_below="@+id/toolbar2"
        android:id="@+id/sw_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="夜间模式"
        android:textColor="#0066FF"
        android:textSize="30dp"
        android:switchMinWidth="60dp"
        android:background="#FFE0CC"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_marginTop="0dp"/>

    <Switch
        android:id="@+id/sw_2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="消息提醒"
        android:textColor="#0066FF"
        android:textSize="30dp"
        android:switchMinWidth="60dp"
        android:layout_below="@+id/sw_1"
        android:background="#FFE0CC"
        android:layout_margin="10dp"
        android:padding="10dp"
        />
    <RadioGroup
        android:id="@+id/rg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/sw_2"
        android:background="#FFE0CC"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="主题皮肤"
            android:textColor="#0066FF"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            />

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="天蓝"
            android:textColor="#0066FF"
            android:checked="true"
            android:textSize="30sp"
            android:layout_marginLeft="280dp"/>

        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="橙红"
            android:textColor="#FF7755"
            android:textSize="30sp"
            android:layout_marginLeft="280dp"/>
        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="浅绿"
            android:textColor="#6CE89E"
            android:textSize="30sp"
            android:layout_marginLeft="280dp"/>
        <RadioButton
            android:id="@+id/rb_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="紫色"
            android:textColor="#CF11FF"
            android:textSize="30sp"
            android:layout_marginLeft="280dp"/>
        <RadioButton
            android:id="@+id/rb_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="赤红"
            android:textColor="#FF1141"
            android:textSize="30sp"
            android:layout_marginLeft="280dp"/>
        <RadioButton
            android:id="@+id/rb_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="墨青"
            android:textColor="#58978A"
            android:textSize="30sp"
            android:layout_marginLeft="280dp"/>
    </RadioGroup>
</RelativeLayout>